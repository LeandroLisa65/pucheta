@model IEnumerable<Gestion.EF.Models.Contratistas>

<div class="row">
    <div class="col-md-4"> <h6 class="card-title">Listado de Contratistas</h6></div>
    <div class="col-md-6"></div>
    <div class="col-md-2">
        <div class="btn-master" type="button" id="btn_Nuevo" onclick="Nuevo()"><i class="far fa-edit"></i> Agregar  Contratista</div>
    </div>
</div>

<br />
<div id="GrillaKendo"></div>


<script>

    function grilla(datos) {

    $("#GrillaKendo").html("<div id='grillaContratistas'></div>");

    $("#grillaContratistas").kendoGrid({
        filterable: true,
        sortable: true,
        dataSource: {
            data: datos
        },
        columns: [

            { field: "id", title: "Id", width: "60px", media: "(min-width: 850px)" },
            { field: "nombre", title: "Nombre", media: "(min-width: 450px)" },
            { field: "barrio", title: "Barrio", media: "(min-width: 450px)" },
            { field: "calle", title: "Calle", media: "(min-width: 450px)" },
            { field: "altura", title: "Altura", media: "(min-width: 450px)" },
            { field: "celular", title: "Celular", media: "(min-width: 450px)" },
            { field: "sRubro", title: "Rubro", media: "(min-width: 450px)" },

            { command: { name: "kedit", text:"", click: Editar }, title: "Editar", width: "65px" , attributes: { style: "text-align:center;" } }

        ]

    });
}

    var data = JSON.parse('@Html.Raw(Json.Serialize(Model))');

    grilla(data);


</script>
